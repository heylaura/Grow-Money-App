<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.growmoneyapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Grow Money App"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".controller.DespesasActivityController" android:theme="@style/despesaTheme">
        </activity>
        <activity android:name=".controller.ReceitasActivityController" android:theme="@style/receitaTheme" />
        <activity android:name=".controller.PrincipalActivityController" android:theme="@style/generalTheme"/>
        <activity android:name=".controller.CadastroActivityController" android:theme="@style/generalTheme" />
        <activity android:name=".controller.LoginActivityController" android:theme="@style/generalTheme" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.Intro">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>